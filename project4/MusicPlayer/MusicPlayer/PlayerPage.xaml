            <Image WidthRequest="500" Source="{Binding SongImage}"></Image>
                <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                <Button
                    x:Name="btnPlay"
                    Text="Play"
                    Clicked="play"
                    BackgroundColor="Green"
                    SemanticProperties.Hint="Start playing a sound" />
                <Button
                    x:Name="btnPause"
                    Text="Pause"
                    BackgroundColor="Blue"
                    Clicked="pause"
                    SemanticProperties.Hint="Pause playing the sound" />

                    <Button
                    x:Name="btnStop"
                    Text="Stop"
                    BackgroundColor="Red"
                    Clicked="stop"
                    SemanticProperties.Hint="Stop playing the sound" />
                </HorizontalStackLayout>
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10"  WidthRequest="300">
                <Picker x:Name="playlistPicker" WidthRequest="200" Title="Select Playlist" ItemsSource="{Binding Playlists}"></Picker>
                <Button
                    Clicked="addToPlaylist"
                    Text="Add to Playlist"
                    BackgroundColor="Teal"
                    TextColor="White"
                    SemanticProperties.Hint="Pause playing the sound" />
