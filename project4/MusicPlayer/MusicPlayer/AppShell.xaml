<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="MusicPlayer.AppShell"
       xmlns:local="clr-namespace:MusicPlayer"
       Shell.FlyoutBehavior="Flyout" >
    <Shell.FlyoutHeader>
        <VerticalStackLayout Spacing="10" Padding="10">
            <Button BackgroundColor="LightGray" TextColor="Black" BorderWidth="0" Text="Home" Clicked="gotoHome"/>
            <Button BackgroundColor="LightGray" TextColor="Black" BorderWidth="0" Text="Library"  Clicked="gotoLibrary"/>
            <Button BackgroundColor="LightGray" TextColor="Black" BorderWidth="0" Text="Playlist"  Clicked="gotoPlaylist"/>
        </VerticalStackLayout>
    </Shell.FlyoutHeader>
    <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" FlyoutItemIsVisible="false"  Route="MainPage" />
    <ShellContent Title="Library" ContentTemplate="{DataTemplate local:LibraryPage}" FlyoutItemIsVisible="false"  Route="LibraryPage" />
    <ShellContent Title="Playlist" ContentTemplate="{DataTemplate local:PlaylistPage}" FlyoutItemIsVisible="false" Route="PlaylistPage" />
    <ShellContent Title="Now Playing" ContentTemplate="{DataTemplate local:PlayerPage}" FlyoutItemIsVisible="false" Route="PlayerPage" />
</Shell>