<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicPlayer.LibraryPage"
             Title="Albums">
    <CollectionView SelectionChanged="albumChanged" SelectionMode="Single" HorizontalOptions="Start" ItemsSource="{Binding Albums}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <HorizontalStackLayout Padding="10" Spacing="10" HorizontalOptions="StartAndExpand">
                <Image  WidthRequest="140" Source="{Binding Image}"></Image>
                <Label Padding="4" VerticalOptions="Center"
                                Text="{Binding Name}"
                                FontAttributes="Bold" />
                </HorizontalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>